<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- 1. Definimos una categoría para agrupar los permisos en la vista de usuario -->
        <record model="ir.module.category" id="module_category_delivery_auth">
            <field name="name">Control de Entregas</field>
            <field name="description">Gestión de autorizaciones para entregas no pagadas.</field>
            <field name="sequence">20</field>
        </record>

        <!-- 2. Definimos el Grupo de "Aprobador" -->
        <record id="group_delivery_approver" model="res.groups">
            <field name="name">Gerente de Aprobación de Entregas</field>
            <!-- Heredamos de internal user para que sea un usuario interno -->
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
    </data>
</odoo>